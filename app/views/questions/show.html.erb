<h2><%= @question.title %></h2>

<%= "Asked by guest #{time_ago_in_words(@question.created_at)} ago." %>

<p><%= @question.description %></p>

<% if @question.answers.empty? %>
  <p>Be the first to answer this question.</p>
<% end %>

<% @question.answers.each do |answer| %>
  <p>
  	<%= answer.votes_count %>
  	<% if current_user %>
  		<%= link_to "\u25B2", upvote_path(voteable_id: answer.id, voteable_type: "Answer", user_id: current_user.id ), method: :post %>
  	<% else %>
  	  <%= "\u25B2" %>
  	<% end %>
  	<%= answer.content %>
  </p>
<% end %>

<%= form_for @answer do |f| %>
  <%= f.label :content, "Post an answer:" %>
  <%= f.hidden_field :question_id, value: @question.id %>
  <p><%= f.text_area :content %></p>
  <p><%= f.submit %></p>
<% end %>
