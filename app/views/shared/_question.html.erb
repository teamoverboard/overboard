<h2><%= question.title %></h2>

<p>Asked by <%= link_to "#{question.user.username}", user_path(id: question.user_id, username: question.user.username) %>
<%=time_ago_in_words(question.created_at) %> ago.</p>

<p><%= question.description %></p>

<p><%= text_field_tag 'tiny_url', tiny_question_url(question) %></p>

<%= render partial: 'common/comment', locals: { :commentable => question } %>
