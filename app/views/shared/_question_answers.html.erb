<% if question.answers.empty? %>
  <p>Be the first to answer this question.</p>
<% end %>

<% question.answers.each do |answer| %>
  <p><%= render partial: "shared/vote", locals: { voteable: answer, voteable_type: "Answer" } %>
  <%= image_tag answer.user.gravatar_url, class: 'avatar__small' %>
  	<%= parse(answer.content).html_safe %><p>
  <p>Answered by <%= link_to "#{answer.user.username}", user_path(id: answer.user_id, username: answer.user.username) %>
  <%= time_ago_in_words(answer.created_at) %> ago.</p>
  <%= render partial: 'common/comment', locals: { :comments => answer.comments, :commentable => answer } %>
<% end %>
