<div class="question__card">
  <%= render partial: 'shared/vote', locals: {voteable: question, voteable_type: 'Question'} %>

  <div class="question__card__content">
    <div class="avatar__small"><%= image_tag question.user.gravatar_url %></div>

    <%= link_to question.title, question_path(id: question.id, title: question.title.parameterize) %>

    <div class="channel-pill">
      <%= link_to question.channel.name, channel_path(question.channel.name) %>
    </div>

    <p class="question__card__about">Asked by <%= link_to question.user.name, user_path(id: question.user_id, username: question.user.username) %> <%= time_ago_in_words(question.created_at) %> ago.</p>
  </div>
</div>
