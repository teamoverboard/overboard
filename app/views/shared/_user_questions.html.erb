<% if user.questions.any? %>
	<h3>Questions</h3>
<% end %>

<% user.questions.each do |question| %>
  	<p><%= render partial: "shared/vote", locals: { voteable: question, voteable_type: "Question" } %>
  	<%= link_to "#{question.title}", question_path(id: question.id, title: question.title.parameterize ) %></p>
  	<pAsked <%= time_ago_in_words(question.created_at) %> ago.</p>
<% end %>